<div class="container mt-4">
  <div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
      <h1 class="h3 mb-0">Detalhes do Paciente</h1>
      <div>
        <%= link_to 'Editar', edit_patient_path(@patient), class: 'btn btn-warning' %>
        <%= link_to 'Voltar', patients_path, class: 'btn btn-secondary' %>
      </div>
    </div>
    <div class="card-body">
      <div class="row">
        <div class="col-md-6">
          <p><strong>Nome:</strong> <%= @patient.name %></p>
          <p><strong>CPF:</strong> <%= @patient.cpf %></p>
          <p><strong>Data de Nascimento:</strong> <%= @patient.birth_date&.strftime("%d/%m/%Y") %></p>
        </div>
        <div class="col-md-6">
          <p><strong>Sexo:</strong> <%= @patient.sexo == 'M' ? 'Masculino' : 'Feminino' %></p>
          <p><strong>NÃºmero:</strong> <%= @patient.numero %></p>
        </div>
      </div>
    </div>
  </div>
</div> 